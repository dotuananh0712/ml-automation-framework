{
  "includeCoAuthoredBy": true,
  "env": {
    "INSIDE_CLAUDE_CODE": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "600000"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "tool_name": "Write|Edit",
          "file_paths": ["**/*.py"]
        },
        "commands": [
          {
            "type": "shell",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && ruff format \"$CLAUDE_TOOL_INPUT_FILE_PATH\" 2>/dev/null || true",
            "timeout": 30000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": {
          "tool_name": "Bash",
          "command_pattern": "git (push|commit).*--force"
        },
        "commands": [
          {
            "type": "shell",
            "command": "echo '{\"block\": true, \"feedback\": \"Force push is blocked. Use regular push or ask user for confirmation.\"}'"
          }
        ]
      }
    ]
  }
}
